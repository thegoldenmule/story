#:kivy 1.8

<NarrativeView>
    _output: text_content
    _input: text_input

    BoxLayout:
        orientation: 'vertical'

        Label:
            id: text_content
            size_hint: (1, .9)
            font_size: 16
            markup: True
            halign:'left'
            valign:'top'
            text_size: self.size
            text: 'Testing'

        TextInput:
            id: text_input
            font_size: 16
            size_hint_x: 1
            size_hint_y: None
            height: 30
            multiline: False,
            background_color: .25, .25, .25
            focus: True
            on_text: root.on_input_change(args[0], args[1])
            on_text_validate: print(args[0])

<ParseView>
    _content: text_content

    BoxLayout:
        orientation: 'vertical'

        Label:
            id: text_content
            size_hint: (1, 1)
            font_size: 16
            markup: True
            halign:'left'
            valign:'top'
            text_size: self.size
            text: 'Parse View'

<MainWindow>
    _narrativeView: narrative_view
    _parseView: parse_view

    orientation: 'horizontal'

    NarrativeView:
        id: narrative_view
    ParseView:
        id: parse_view